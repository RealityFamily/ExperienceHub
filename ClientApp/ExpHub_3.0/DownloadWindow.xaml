<Window x:Class="ExpHub_3._0.DownloadWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:res="clr-namespace:ExpHub_3._0.Properties"
        mc:Ignorable="d"
        Title="{x:Static res:Resources.DownloadLesson}" Height="450" Width="800"
		Style="{DynamicResource WindowStyle}">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Vertical">
		<TextBlock Style="{DynamicResource TextBlockStyle}" x:Name="Status"/>
		<ProgressBar x:Name="progressBar" Margin="0, 20, 0, 0"/>
		<StackPanel Orientation="Horizontal" Margin="0, 20, 0, 0">
			<Button Name="OK" Content="Ok" Style="{DynamicResource InvButtonStyle}" Visibility="Collapsed" Click="OK_Click" Margin="0, 0, 15, 0"/>
			<Button Name="Pause" Content="{x:Static res:Resources.Pause}" Style="{DynamicResource InvButtonStyle}" Click="Button_Click" Margin="0, 0, 15, 0"/>
			<Button Content="{x:Static res:Resources.Cancel}" Style="{DynamicResource InvButtonStyle}" Click="Button_Click_1"/>
		</StackPanel>
	</StackPanel>
</Window>
