<Window x:Class="ExpHub_3._0.LostPass"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExpHub_3._0.Properties"
        mc:Ignorable="d"
        Title="LostPass" Height="250" Width="250" WindowStyle="None" ResizeMode="NoResize"
		WindowStartupLocation="CenterScreen"
		Style="{DynamicResource InvWindowStyle}">
	<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
		<TextBlock Text="{x:Static local:Resources.LostDialog}" Style="{DynamicResource HeaderTextBlockStyle}"/>
		<TextBox GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" Initialized="TextBox_Initialized" Margin="0, 10, 0, 0 " Style="{DynamicResource TextBoxStyle}"/>
		<StackPanel Orientation="Horizontal"  Margin="0, 10, 0, 0 ">
			<Button Content="{x:Static local:Resources.Send}" Click="Button_Click" Style="{DynamicResource InvButtonStyle}"/>
			<Button Content="{x:Static local:Resources.Cancel}" Click="Button_Click_1" Style="{DynamicResource InvButtonStyle}" Margin="10, 0, 0, 0"/>
		</StackPanel>
	</StackPanel>
</Window>
